azul = #22BCE0
gris_oscuro = #444
naranja = #DD4F24

@import 'nib'
@import 'nib/gradients'


body
	background #E9E9E9
	color gris_oscuro
	font-family Arial
	font-size 16px
	
header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1
	
	.logo
		border-right 1px solid azul
		float left
		width 60px
		
		img 
			width 52px
			
	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			font-size 14px
			font-style italic
			text-decoration none
			
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin 10px 2em 0 0 
			padding 0.1em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			
	
		.titulo
			font-size 18px
			font-weight normal
			margin 0 2em 0 0 
			padding 0	

		
	.usuario
		position absolute
		right 10px
		top 10px
		
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2					
			img
				border-radius 50%
				width 60px
				
		.flechita	
			background naranja
			color white
			display block
			
			padding 3px
			position absolute
			right 0
			top 15px
			text-align right 	
			width 100%
				
nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0
			
	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		&::-webkit-scrollbar
			display none
			
		li
			display inline-block
			
			a 
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				
				
			
	
